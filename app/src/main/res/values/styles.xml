<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Theme customization inspiration from: https://medium.com/@joannekao/android-working-with-themes-and-styles-18cde717f4d -->
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/lightGray</item>
        <item name="android:colorForeground">@color/goblin</item>
        <item name="android:textColorLink">@color/goblin</item>
        <item name="android:textColorLinkInverse">@color/winterBlue</item>
    </style>

    <style name="Pref" parent="Theme.AppCompat.Light.DarkActionBar">
        <!--Preferences toolbar customization learned from: https://stackoverflow.com/questions/30139548/how-to-add-toolbar-in-preferenceactivity -->
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/lightGray</item>
        <item name="android:colorForeground">@color/goblin</item>
        <item name="android:textColorLink">@color/goblin</item>
        <item name="android:textColorLinkInverse">@color/winterBlue</item>
    </style>

</resources>
